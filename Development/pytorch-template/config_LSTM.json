{
    "name": "LSTM_test",
    "n_gpu": 1,

    "arch": {
        "type": "LSTM",
        "args": {
            "hidden_dim" : 64,
            "n_layers" : 2
        }
    },
    "data_loader": {
        "type": "IscreamDataLoader",
        "args":{
            "data_dir": "/opt/ml/input/data/",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.3,
            "num_workers": 5,
            "asset_dir" : "asset/",
            "file_name" : "train_data.csv",
            "max_seq_len" : 20,
            "collate_fn" : "sequence_collate"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "bce_loss",
    "metrics": [
        "accuracy", "roc_auc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type" : "LSTMTrainer",
        "epochs": 20,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 5,

        "tensorboard": true
    }
}