{
    "name": "Transformer-test",
    "entity" : "seongbeom",

    "cat_cols" : ["assessmentItemID2idx", "testId2idx", "KnowledgeTag2idx", "large_paper_number2idx", "hour", "dayofweek"], 
    "num_cols" : ["now_elapsed", "assessmentItemID_mean_now_elapsed", "assessmentItemID_std_now_elapsed", "assessmentItemID_mean_answerCode", "assessmentItemID_std_answerCode"],

    "preprocess": {
        "type": "TransformerPreprocess",
        "args": {
            "data_dir": "/opt/ml/input/data"
        }
    },

    "dataset" : {
        "type": "TransformerDataset",
        "args": {
            "data_augmentation" : false
        }
    },

    "data_loader" : {
        "type": "TransformerDataLoader",
        "args": {
            "batch_size" : 256,
            "shuffle" : true,
            "num_workers" : 8,
            "collate_fn" : "transformer_collate"
        }
    },

    "arch" : {
        "type": "LSTM",
        "args": {
            "hidden_dim" : 128,
            "embedding_size" : 64,
            "num_layers" : 1,
            "dropout_rate" : 0.5
        }
    },

    "loss" : "bce_loss",

    "optimizer" : {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": false
        }
    },

    "trainer" : {
        "type" : "TransformerTrainer",
        "epochs": 1,
        "oof" : 1,
        "seed" : 22,
        "save_dir": "/opt/ml/model",
        "submission_dir": "/opt/ml/submission"
    }
}
